<%= form_for(@guest) do |f| %>
  <div class="form-group">
    <%= f.label :first_name %>
    <%= f.text_field :first_name %>
  </div>
  <div class="form-group">
    <%= f.label :last_name %>
    <%= f.text_field :last_name %>
  </div>
  <div class="form-group">
    <%= f.label :tb_card %>
    <%= f.file_field :tb_card %>
  </div>
  <%= f.submit(class: "btn btn-primary") %>
<% end %>
